<%= form_with model: book do |form| %>
  <div>
    <%= form.text_field :title, placeholder: "Cookbook Title" %><br>
    <%= form.text_field :author, placeholder: "Author" %><br>
    <%= form.text_field :cuisine, placeholder: "Cuisine" %><br>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>
    
    <div>
      <% book.errors.full_messages_for(:author).each do |message| %>
       <div><%= message %></div>
      <% end %>
    </div>
      
    <div>
      <%= form.submit "Add to Shelf", class: "button" %>
      </div>
    <% end %>  