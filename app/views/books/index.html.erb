<h1>Books</h1>

<span class="button new-btn"><%= link_to "Add New Cookbook", new_book_path %></span>

<table>
  <thead>
    <tr>
      <th class="col-id"><%= link_to "ID", :sort => "id" %></th>
      <th class="col-title"><%= link_to "Title", :sort => "title" %></th>
      <th class="col-author"><%= link_to "Author", :sort => "author" %></th>
      <th class="col-cuisine"><%= link_to "Cuisine", :sort => "cuisine" %></th>
    </tr>
  </thead>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.cuisine %></td>
    </tr>
    <% end %>
  </table>