<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Title", :sort => "title" %></th>
      <th><%= link_to "Author", :sort => "author" %></th>
      <th><%= link_to "Cuisine", :sort => "cuisine" %></th>
    </tr>
  </thead>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.cuisine %></td>
    </tr>
    <% end %>
  </table>